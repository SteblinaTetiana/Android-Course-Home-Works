<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgAndroidStudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image_androidstudio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgAndroidStudio"
        app:srcCompat="@android:drawable/btn_star">

    </ImageButton>

    <ImageView
        android:id="@+id/iconPhone"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/icon_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAndroidStudio" />

    <TextView
        android:id="@+id/txtnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="60dp"
        android:text="(650) 555-1234"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/iconPhone"
        app:layout_constraintTop_toBottomOf="@+id/imgAndroidStudio" />

    <TextView
        android:id="@+id/txtGoogleVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Google Voice"
        android:textColor="#708090"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/iconPhone"
        app:layout_constraintTop_toBottomOf="@+id/txtnumber" />


    <ImageView
        android:id="@+id/iconSMS"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/txtnumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        android:layout_marginRight="35dp"
        app:srcCompat="@drawable/icon_sms">

    </ImageView>

    <TextView
        android:id="@+id/txtnumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:text="(650) 555-4321"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/iconPhone"
        app:layout_constraintTop_toBottomOf="@+id/txtGoogleVoice" />

    <TextView
        android:id="@+id/txtMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Mobile"
        android:textColor="#708090"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/iconPhone"
        app:layout_constraintTop_toBottomOf="@+id/txtnumber1" />

    <ImageView
        android:id="@+id/iconSMS1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/txtnumber1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconSMS"
        android:layout_marginRight="35dp"
        app:srcCompat="@drawable/icon_sms">

    </ImageView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="#7A919191"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/txtMobile"
        app:layout_constraintTop_toBottomOf="@+id/txtMobile">

    </View>

    <ImageView
        android:id="@+id/iconEmail"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/icon_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="studio@android.com"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/iconEmail"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/txtWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Work"
        android:textColor="#708090"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/iconEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>